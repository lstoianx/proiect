        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/login_btn"
        android:text="Login"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="10dp"
